pragma solidity ^0.8.18;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "../../src/MoodNft.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";

contract MoodNftIntegrationTest is Test {
    MoodNft moodNft;
    DeployMoodNft deployer;

    // Fixed typo: "day:" -> "data:"
    string public constant HAPPY_SVG_IMAGE_URI = "data:image/svg+xml;base64,";
    
    string public constant SAD_SVG_IMAGE_URI = "data:image/svg+xml;base64,";
    
    // NOTE: This constant must match exactly what your contract produces.
    string public constant SAD_SVG_URI = "data:application/json;base64,";

    address USER = makeAddr("user");

    function setUp() public {
        deployer = new DeployMoodNft();
        moodNft = deployer.run();
        // 2. THE FIX: Wipe any code from the USER address
        // This forces _safeMint to treat USER as a regular wallet (EOA),
        // preventing the "onERC721Received" callback failure.
        vm.etch(USER, "");
    }

    function testViewTokenURIIntegration() public {
        hoax(USER, 1 ether); // Fund user for fork testing
        moodNft.mintNft();
        console.log(moodNft.tokenURI(0));
    }

    function testFlipTokenToSad() public {
        // 1. MINT (Use hoax to fund user)
        hoax(USER, 1 ether); 
        moodNft.mintNft();

        // 2. FLIP (Use hoax again or startPrank to continue)
        // Since hoax resets per call usually, we can just fund them again to be safe
        vm.startPrank(USER); 
        moodNft.flipMood(0);
        
        // 3. ASSERT
        // Use assertEq to see the difference if it fails
        assertEq(
            keccak256(abi.encodePacked(moodNft.tokenURI(0))), 
            keccak256(abi.encodePacked(SAD_SVG_URI))
        );
        
        vm.stopPrank();
    }
}